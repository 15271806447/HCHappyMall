/**index.wxss**/

.page__bd {
  padding: 0 0 0 30rpx;
  margin-top: 25rpx;
}

.list .weui-cell__bd .weui-size {
  font-size: 12pt;
  font-family: Microsoft Yahei;
  line-height: 120rpx;
}

.list .weui-cell__bd .weui-size-font{
  font-size: 12pt;
  font-family: Microsoft Yahei;
  line-height: 120rpx;
  color: #A8A8A8;
}

.list .line-css {
  height: 3rpx;
  background: #edece8;
  margin: 50rpx 10rpx 5rpx 0rpx;
}

.list .weui-cell__bd {
  display: flex;
  justify-content: space-between;
  border-bottom: 2rpx solid #edece8;
  height: 120rpx;
}

.weui-cell__bd .weui-size-font image {
  width: 80rpx;
  height: 80rpx;
  vertical-align: middle;
}



/* 活动图片 */
.activity-picture{
  width: 88%;
  background-color: white;
  margin: 0rpx 0rpx 25rpx 25rpx;
  padding: 20rpx;
  border-radius: 5%;
  display: flex;
  flex-wrap:wrap; 
}
.picture-detail{
  width: 47%;
  height: 280rpx;
}
.picture-detail image{
  width: 100%;
  height: 100%;
}
