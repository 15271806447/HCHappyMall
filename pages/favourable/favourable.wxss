page {
  padding-top: 10rpx;
  background-color: #fff;
}

.coupon-img {
  width: 100%;
  height: 165px;
}

.coupon {
  display: flex;
  flex-direction: row;
  height: 70px;
  width: 95%;
  margin: auto;
  box-shadow: -1px 3px 3px 1px #ccc;
  margin-bottom: 10px;
}

.coupon-left {
  width: 70%;
  background-color: #f5ecdb;
  flex-direction: column;
  padding-top: 5px;
  padding-left: 2px;
}

.coupon-money {
  float: left;
  width: 30%;
  color: #f18695;
  font-weight: 700;
}

.coupon-money text {
  font-size: 75rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.coupon-detail {
  float: left;
  color: #3ad8ca;
  margin-top: 10rpx;
  margin-left: 10rpx;
}

.detail-top {
  font-size: 35rpx;
  font-weight: 700;
}

.detail-bottom {
  font-size: 45rpx;
  font-weight: 500;
}

.coupon-right {
  float: right;
  width: 30%;
  height: 100%;
  flex-direction: column;
  background-color: #ea8b99;
  display: flex;
  align-items: center;
  justify-content: center;
}

.right-top {
  font-size: 44rpx;
  color: #ffd700;
}

.right-bottom {
  font-size: 32rpx;
  color: #fff;
}
