page {
  padding-top: 10rpx;
  background-color: #fff;
}

/* 顶部菜单切换 */
.navbar{  
  display: flex;  
  background: #fff;  
}  
.none_tab{
  position: relative;
  top: 20rpx;
  color: #999;
  font-size: 32rpx;
}
/* 默认选中菜单 */
.navbar .item{  
  position: relative;  
  flex: auto;  
  font-size: 27rpx;
  width: 100rpx;
  text-align: center;  
  line-height: 80rpx;  
  color:  #333;
    border-bottom: 6rpx solid #ddd;
}  
/* 选中菜单样式 */
.navbar .item.active{  
  color: #333333;  
  border-bottom: 6rpx solid #D66058;
  
}  
/* 字体 */
.navbar .item.active:after{  
  content: "";  
  display: block;  
  position: absolute;  
  bottom: 0;  
  left: 0;  
  right: 0;  
  height: 4rpx;  
}  

.coupon {
  display: flex;
  flex-direction: row;
  height: 70px;
  width: 97%;
  margin: auto;
  box-shadow: -1px 3px 3px 1px #ccc;
  margin-bottom: 10px;
}

.coupon-left {
  width: 70%;
  background-color: #f5ecdb;
  flex-direction: column;
  padding-top: 5px;
  padding-left: 2px;
}

.coupon-money {
  float: left;
  width: 28%;
  color: #f18695;
  font-weight: 700;
  margin-top: 10rpx;
}

.coupon-money text {
  font-size: 75rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.coupon-detail {
  float: left;
  color: #3ad8ca;
  margin-top: 10rpx;
  /* margin-left: 10rpx; */
}

.detail-top {
  font-size: 35rpx;
  font-weight: 700;
}

.detail-bottom {
  flex-direction: row;
}

.detail-couponType{
  font-size: 45rpx;
  font-weight: 500;
  display:inline-block;
  vertical-align:bottom;
}

.detail-endTime{
  font-size: 24rpx;
  margin-left: 10rpx;
  display:inline-block;
  vertical-align:bottom;
  color: red;
  font-weight: 700;
}

.coupon-right {
  float: right;
  width: 30%;
  height: 100%;
  flex-direction: column;
  background-color: #ea8b99;
  display: flex;
  align-items: center;
  justify-content: center;
}

.right-top {
  font-size: 44rpx;
  color: #ffd700;
}

.right-bottom {
  font-size: 32rpx;
  color: #fff;
}