
 <view class='box'>  
     <text class='nespas'>新密码</text>
      <input placeholder='请输入您的新密码' class='inputpas' bindinput='getValue' maxlength='6' data-index='1'></input>
</view>
 <view class='box'>  
     <text class='nespas'>确认密码</text>
      <input placeholder='请确认您的密码' class='inputpas' bindinput='getValue' maxlength='6' data-index='2'></input>
</view>
 <view class='box'>  
     <text class='nespas'>手机号</text>
      <input placeholder='请确认您的手机号' class='inputpas' value='{{phoneNumber}}' disabled='false'></input>
</view>
 <view class='box mb100'>  
     <text class='nespas'>效验码</text>
      <input placeholder='请输入验证码' class='inputpas1' bindinput='getValue' data-index='3'></input>
      <text class="{{showView?'show':'hide'}} nespas1" bindtap='getCode'>获取验证码</text>
      <text class="{{showView?'hide':'show'}} nespas1">{{beginTime}}s重发</text>
</view>
<view class='sub' bindtap='submit'>提交</view>




